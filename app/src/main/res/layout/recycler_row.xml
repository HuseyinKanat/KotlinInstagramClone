<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rvUserEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:hint="User Email"
        android:textColor="#673AB7"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rvImageView"
        android:layout_width="381dp"
        android:layout_height="359dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.357"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvUserEmail"
        tools:srcCompat="@tools:sample/avatars"
/>

    <ImageSwitcher
        android:id="@+id/rcLike"
        android:layout_width="42dp"
        android:layout_height="40dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/app_name"
        android:foreground="@drawable/baseline_favorite_border_24"
        android:onClick="like"
        app:layout_constraintStart_toStartOf="@+id/rvImageView"
        app:layout_constraintTop_toBottomOf="@+id/rvImageView"
        ></ImageSwitcher>

    <TextView
        android:id="@+id/rvComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Comment"
        app:layout_constraintStart_toStartOf="@+id/rcLike"
        app:layout_constraintTop_toBottomOf="@+id/rcLike" />
</androidx.constraintlayout.widget.ConstraintLayout>